{
    "dataset_reader": {
        "type": "wordseg_tagging"
    },
    "train_data_path": "/CPAI/cnt.wordseg/corpora/data/final_allennlp/all_train.txt",
    "validation_data_path": "/CPAI/cnt.wordseg/corpora/data/final_allennlp/all_dev.txt",
    "model": {
        "type": "cnt_wordseg",
        "tokens_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 150
                }
            }
        },
        "tokens_seq2seq": {
            "type": "lstm",
            "bidirectional": true,
            "input_size": 150,
            "hidden_size": 150,
            "num_layers": 1
        },
        "context_embedder": {
            "token_embedders": {
                "contexts": {
                    "type": "embedding",
                    "embedding_dim": 100
                }
            }
        },
        "tokens_context_crf": {
            "type": "crf_tagger",
            "label_encoding": "BMES",
            "text_field_embedder": {
                "type": "crf_concat_embedder",
                "output_dim": 400
            },
            "encoder": {
                "type": "lstm",
                "bidirectional": true,
                "input_size": 400,
                "hidden_size": 200,
                "num_layers": 1
            }
        }
    },
    "iterator": {
        "type": "basic",
        "batch_size": 32
    },
    "trainer": {
        "num_epochs": 20,
        "patience": 3,
        "cuda_device": 0,
        "validation_metric": "+f1-measure-overall",
        "optimizer": {
            "type": "adam",
            "lr": 0.001,
            "betas": [
                0.9,
                0.999
            ]
        }
    }
}
