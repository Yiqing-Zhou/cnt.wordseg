{
    "dataset_reader": {
        "type": "wordseg_tagging",
        "inject_context_to_tokens": true,
        "enable_bigram": false
    },
    "train_data_path": "tests/fixtures/example_data.txt",
    "validation_data_path": "tests/fixtures/example_data.txt",
    "model": {
        "type": "cnt_wordseg_inject_tag",
        "tokens_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "vocab_namespace": "tokens",
                    "embedding_dim": 100
                }
            }
        },
        "tokens_seq2seq": {
            "type": "lstm",
            "bidirectional": true,
            "input_size": 100,
            "hidden_size": 100,
            "num_layers": 1
        },
        // "tokens_bigram_embedder": {
        //     "token_embedders": {
        //         "tokens_bigram": {
        //             "type": "embedding",
        //             "vocab_namespace": "tokens_bigram",
        //             "embedding_dim": 100
        //         }
        //     }
        // },
        "tokens_context_crf": {
            "type": "crf_tagger",
            "label_encoding": "BMES",
            "text_field_embedder": {
                "type": "crf_concat_embedder",
                "output_dim": 300
            },
            "encoder": {
                "type": "pass_through",
                "input_dim": 300
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [
            [
                "tokens",
                "num_tokens"
            ]
        ],
        "padding_noise": 0.0,
        "batch_size": 32
    },
    "trainer": {
        "num_epochs": 1,
        "cuda_device": -1,
        "validation_metric": "+f1-measure-overall",
        "optimizer": {
            "type": "adam",
            "lr": 0.01
        }
    }
}
